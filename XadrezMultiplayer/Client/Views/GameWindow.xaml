<Window x:Class="Client.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jogo de Xadrez" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#7F8C8D"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="#2C3E50" 
                Padding="15" 
                CornerRadius="8"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="♔ Jogo de Xadrez" 
                          Foreground="White" 
                          FontSize="22" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#27AE60" 
                            CornerRadius="5" 
                            Padding="10,5" 
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏱ " 
                                      Foreground="White" 
                                      FontSize="16" 
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="15:00" 
                                      Foreground="White" 
                                      FontSize="14" 
                                      FontWeight="Bold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#E74C3C" 
                            CornerRadius="5" 
                            Padding="10,5">
                        <TextBlock Text="Seu Turno" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Chess Board Area -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#34495E" 
                CornerRadius="10" 
                Margin="0,0,15,0"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Opponent Info -->
                <Border Grid.Row="0" 
                        Background="#2C3E50" 
                        CornerRadius="5" 
                        Padding="10"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Ellipse Grid.Column="0" 
                                Width="40" 
                                Height="40" 
                                Fill="#95A5A6"
                                Margin="0,0,10,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Oponente" 
                                      Foreground="White" 
                                      FontSize="16" 
                                      FontWeight="Bold"/>
                            <TextBlock Text="Rating: 1450" 
                                      Foreground="#BDC3C7" 
                                      FontSize="12"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" 
                                  Text="♟ x5" 
                                  Foreground="#E74C3C" 
                                  FontSize="18"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Chess Board -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="8"
                        BorderBrush="#7F8C8D"
                        BorderThickness="2">
                    <Viewbox Stretch="Uniform">
                        <TextBox Text="{Binding BoardState, UpdateSourceTrigger=PropertyChanged}"
                                Width="400" 
                                Height="400"
                                FontFamily="Courier New"
                                FontSize="14"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Background="#ECF0F1"
                                BorderThickness="0"
                                Padding="10"/>
                    </Viewbox>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <!-- Player Info -->
            <Border Background="#2C3E50" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Ellipse Grid.Column="0" 
                            Width="50" 
                            Height="50" 
                            Fill="#3498DB"
                            Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Você" 
                                  Foreground="White" 
                                  FontSize="18" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Rating: 1520" 
                                  Foreground="#BDC3C7" 
                                  FontSize="13"/>
                        <TextBlock Text="♟ x3" 
                                  Foreground="#27AE60" 
                                  FontSize="16"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Move Input -->
            <GroupBox Header="Fazer Movimento" 
                     Foreground="White"
                     Margin="0,0,0,15">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                              FontWeight="Bold" 
                                              FontSize="14"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupBox.Style>
                
                <StackPanel>
                    <TextBlock Text="Formato: e2-e4" 
                              Foreground="#BDC3C7" 
                              FontSize="11"
                              Margin="0,0,0,5"/>
                    
                    <TextBox Text="{Binding MoveInput, UpdateSourceTrigger=PropertyChanged}"
                            Padding="8"
                            FontSize="14"
                            Margin="0,0,0,10"/>
                    
                    <Button Content="Enviar Movimento" 
                            Command="{Binding MakeMoveCommand}"
                            CommandParameter="{Binding BoardState}"
                            Style="{StaticResource ModernButton}"
                            Background="#27AE60"/>
                </StackPanel>
            </GroupBox>
            
            <!-- Move History -->
            <GroupBox Header="Histórico de Jogadas" 
                     Foreground="White"
                     Height="250">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                              FontWeight="Bold" 
                                              FontSize="14"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupBox.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding MoveHistory}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#34495E" 
                                       CornerRadius="4" 
                                       Padding="8"
                                       Margin="0,0,0,5">
                                    <TextBlock Text="{Binding}" 
                                              Foreground="White"
                                              FontFamily="Consolas"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>
        
        <!-- Footer Actions -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" 
                Background="#2C3E50" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage, FallbackValue='Aguardando movimento...'}" 
                          Foreground="#BDC3C7"
                          FontStyle="Italic"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Oferecer Empate" 
                            Style="{StaticResource ModernButton}"
                            Background="#F39C12"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Desistir" 
                            Style="{StaticResource ModernButton}"
                            Background="#E74C3C"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>